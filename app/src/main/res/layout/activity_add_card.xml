<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCardActivity">

    <EditText
        android:id="@+id/enter_question"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:hint="Enter the question here" />

    <EditText
        android:id="@+id/enter_answer"
        android:layout_width="346dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/enter_question"
        android:layout_marginTop="156dp"
        android:hint="Enter the answer here" />

    <ImageView
        android:id="@+id/myBtn2"
        android:layout_width="57dp"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/myBtn3"
        android:layout_marginEnd="33dp"
        android:src="@drawable/ic_dismiss" />

    <ImageView
        android:id="@+id/myBtn3"
        android:layout_width="57dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="46dp"
        android:layout_marginStart="42dp"
        android:src="@drawable/ic_save" />

</RelativeLayout>